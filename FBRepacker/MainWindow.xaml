<Window x:Class="FBRepacker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FBRepacker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <WrapPanel>
        <Menu HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="792">
            <MenuItem Header="File">
                <MenuItem Header="Open Extract" Click="OpenExtractFileMenu_Click"></MenuItem>
                <MenuItem Header="Open Repack" Click="OpenRepackFileMenu_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Settings">
                <MenuItem Header="Options" Click="OpenSettings_Click"></MenuItem>
            </MenuItem>
        </Menu>
        
        <Grid Height="396" Width="791">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="12*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="8*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Extract Path: " Width="70" TextAlignment="Center" Margin="5,0,0,0" Grid.Column="0"/>
                    <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Name="ExtractPath" Margin="10,0,0,0" Grid.Column="1"/>
                </Grid>

                <Button Content="..." Width="35" HorizontalContentAlignment="Center" Margin="10,0,0,0" Click="selectExtractPathButton" Grid.Row="0" Grid.Column="1"/>
                
                <Grid Grid.Row="1" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="8*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Repack Path: "  Width="70" TextAlignment="Center" Margin="5,0,0,0" Grid.Column="0"/>
                    <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Name="RepackPath" Margin="10,0,0,0" Grid.Column="1"/>
                </Grid>

                <Button Content="..." Width="35" HorizontalContentAlignment="Center" Margin="10,0,0,0" Click="selectRepackPathButton" Grid.Row="1" Grid.Column="1"/>
            </Grid>

            <StackPanel Grid.Row="1">
                <TextBlock TextWrapping="Wrap" Text="debug" Name="debugmsg" Height="269"/>
                <Button Content="Extract" Click="extract_Click"></Button>
                <Button Content="Repack PAC" Click="repackPAC_Click"></Button>
                <Button Content="Repack Psarc" Click="repackPsarc_Click"></Button>
            </StackPanel>
        </Grid>
    </WrapPanel>
   
</Window>
