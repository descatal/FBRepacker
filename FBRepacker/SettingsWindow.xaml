<Window x:Class="FBRepacker.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FBRepacker"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="100" Width="424.792">
    <StackPanel>
        <CheckBox Content="Extract audio files as .WAV format" Name ="outputWAVCheck" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.313,0.255" Height="16" Width="397" Checked="outputWAVCheckBox_Checked" Unchecked="outputWAVCheckBox_Unchecked"/>
        <CheckBox Content="Don't Use VBN Bone Hierarchy. (Export a new VBN file)" Name ="exportVBNCheck" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.313,0.255" Height="16" Width="397" Checked="exportVBNCheckBox_Checked" Unchecked="exportVBNCheckBox_Unchecked"/>

    </StackPanel>
</Window>
